<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Array Operations</title>
  </head>
  <body>
    <h1>Javascript Practical</h1>
    <script>
      var array = [];
      var x = prompt("Enter the size of array");
      //Input the elements in the array
      for (i = 0; i < x; i++) {
        array[i] = prompt("Enter array Element " + (i + 1));
      }
      //Display the array elements
      for (i = 0; i < x; i++) {
        document.write(
          "The element at position " + i + " is : " + array[i] + "</br> </br>"
        );
      }
      //A. Remove element from array
      var removeEle = prompt("Enter array Element to delete ");
      function removeElement(removeEle) {
        for (i = 0; i < x; i++) {
          if (array[i] == removeEle) {
            // array.remove(i);
            delete array[i];
          } else {
            document.write("Element not found"</br><br>); 
          }
        }
      }
      removeElement(removeEle);
      //Display the array elements
      for (i = 0; i < x; i++) {
        document.write(
          " \n The element at position " +
            i +
            " is : " +
            array[i] +
            "</br> </br>"
        );
      }

      //B. Check for a specific value
      var searchEle = prompt("Enter array Element to find ");
      let pres = false;
      function searchElement(searchEle) {
        let pres = array.includes(searchEle);
        if (pres == true) {
          document.write(
            "Element " + searchEle + " present in the array</br></br>"
          );
        } else
          document.write(
            "Element " + searchEle + " not present in the array</br></br>"
          );
      }
      searchElement(searchEle);
      //C. To empty an array
      array.splice(0, array.length);
      if (array.length == 0) {
        document.write("Array is empty now using splice method");
      }
      document.write(array);
    </script>
  </body>
</html>
